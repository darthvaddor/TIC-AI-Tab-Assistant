{
  "manifest_version": 3,
  "name": "Tab Sensei",
  "description": "An intelligent multi-tab reasoning assistant that compares, summarizes and manages browser tabs.",
  "version": "1.3.0",
  "icons": {
    "16": "popup/icon16.png",
    "48": "popup/icon48.png",
    "128": "popup/icon128.png"
  },
  "side_panel": {
    "default_path": "popup/panel.html"
  },
  "action": {
    "default_title": "Tab Sensei",
    "default_icon": {
      "16": "popup/icon16.png",
      "48": "popup/icon48.png",
      "128": "popup/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/reminder-notification.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup/*",
        "content/*",
        "popup/libs/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_ui": {
    "page": "popup/panel.html",
    "open_in_tab": false
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+T"
      },
      "description": "Toggle Tab Sensei"
    }
  }
}